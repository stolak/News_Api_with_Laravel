            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User login",
                "operationId": "13789c6e8de56f03890c8e718282efb5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
