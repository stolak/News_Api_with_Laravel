                ],
                "summary": "Get list of articles",
                "operationId": "7e370449b00151b6422003b99ee09b88",
                "parameters": [
                    {
                        "name": "keyword",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
